<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        style="@style/AssetOwl.Component.TemplatesList.Row"
        android:layout_height="@dimen/template_list_row_height"
        android:layout_gravity="center_vertical">

        <CheckBox
            android:id="@+id/chb_template"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:button="@drawable/checkbox_background"
            android:layout_marginLeft="@dimen/template_list_margin_side"
            android:layout_marginRight="@dimen/checkbox_margin_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/chb_template"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/template_list_margin_right"
            android:layout_marginTop="@dimen/template_list_margin_side"
            android:layout_marginBottom="@dimen/template_list_margin_side">

            <TextView
                android:id="@+id/textview_audit_templates"
                style="@style/AssetOwl.Component.TemplatesList.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_size_medium"
                android:textColor="@color/template_text_color"
                android:fontFamily="@string/roboto_regular_medium"/>

            <TextView
                android:id="@+id/textview_questions"
                style="@style/AssetOwl.Component.TemplatesList.Row.TextView"
                android:layout_width="@dimen/templates_list_column_width_questions"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/gray_text_color" />

            <TextView
                android:id="@+id/textview_id"
                style="@style/AssetOwl.Component.TemplatesList.Row.TextView"
                android:layout_width="@dimen/templates_list_column_width_id"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/gray_text_color"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/button2"
            android:layout_width="@dimen/icon_visibility_size"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_a_visibility"
            android:layout_marginRight="@dimen/template_list_margin_side"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorTabDividerColor" />
</LinearLayout>