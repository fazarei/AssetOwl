<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical"
    android:background="@color/nav_header_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/nav_heade_margin_left"
        android:layout_marginTop="@dimen/nav_heade_margin_top">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_profile"
            android:layout_height="@dimen/profile_image_size"
            android:layout_width="@dimen/profile_image_size"
            android:textColor="@color/colorTextHeader"
            android:textSize="@dimen/profile_font_size"
            android:textStyle="bold"
            android:fontFamily="@string/roboto_regular_medium"
            android:background="@drawable/bg_text_profile"
            android:gravity="center_vertical|center_horizontal"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/username_header_margin_top"
            android:fontFamily="@string/roboto_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            />

    </LinearLayout>

</RelativeLayout>